<div calss="main posts-index">
  <div class="container p-0">

    <%= paginate @posts %>

    <table class="table">
    <% @posts.each do |post| %>
    <div class="posts-index-item border p-3">
      <div class="media">
        <a class="mr-3">
          <img src="<%= "/user_images/#{post.user.image_name}" %>" class="img-fluid rounded-circle" width="50" height="50">
        </a>
        <div class="media-body">
          <%= link_to post.title, post %>
          <h6 class="mt-1">
            <%= post.updated_at %>
          </h6>
        </div>
        <div class="m-2">
          <% post.tag_list.each do |tag| %>
          <%= link_to posts_path(tag_name: tag) do %>
          <span class="badge badge-primary mr-1 p-2"><%= tag %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    </table>

  </div>
</div>
