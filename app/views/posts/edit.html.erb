<div calss="main posts-edit">
  <div class="container">

    <h2 class="form-heading">編集</h2>

    <%= form_with(url: "/posts/#{@post.id}",method: :patch) do %>
    <div class="form">
      <div class="form-body">
        <div class="form-group">
          <p>タイトル</p>
          <input class="form-control" name="title" value="<%= @post.title %>">
        </div>
        <div class="form-group">
          <p>内容</p>
          <textarea class="form-control" name="content"><%= @post.content %></textarea>
        </div>
        <div class="form-group">
          <p>コード</p>
          <textarea class="form-control" name="code"><%= @post.code %></textarea>
        </div>
        <div class="form-group">
        <p>タグ</p>
        <input class="form-control" name="tag_list" value="<%= @post.tag_list.join(',') %>"></input>
        </div>
        <button type="submit" class="btn btn-info">更新</button>
      </div>
    </div>
    <% end %>

  </div>
</div>
