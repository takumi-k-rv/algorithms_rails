<div calss="main posts-new">
  <div class="container">

    <h2 class="form-heading">新規投稿</h2>

    <%= form_with(url: "/posts") do %>
    <div class="form">
      <div class="form-body">
        <div class="form-group">
        <p>タイトル</p>
        <input class="form-control" name="title" value="<%= @post.title %>">
        </div>
        <div class="form-group">
        <p>内容</p>
        <textarea class="form-control" name="content" value="<%= @post.content %>"></textarea>
        </div>
        <div class="form-group">
        <p>コード</p>
        <textarea class="form-control" name="code" value="<%= @post.code %>"></textarea>
        </div>
        <button type="submit" class="btn btn-info">新規投稿</button>
      </div>
    </div>
    <% end %>

  </div>
</div>
