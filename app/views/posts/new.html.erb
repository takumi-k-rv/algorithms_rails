<div calss="main posts-new">
  <div class="container">

    <h1>新規投稿</h1>

    <% if @error_message %>
    <div class="form-error">
      <%= @error_message %>
    </div>
    <% end %>

    <%= form_with(url: "/posts") do %>
    <div class="form">
      <div class="form-body">
        <p>タイトル</p>
        <input name="title" value="<%= @post.title %>">
        <p>内容</p>
        <textarea name="content" value="<%= @post.content %>"></textarea>
        <p>コード</p>
        <textarea name="code" value="<%= @post.code %>"></textarea>

        <input type="submit" value="新規投稿">
      </div>
    </div>
    <% end %>

  </div>
</div>
